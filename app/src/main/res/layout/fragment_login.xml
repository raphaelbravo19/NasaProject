<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewcontrollers.fragments.LoginFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>
        <EditText
            android:id="@+id/editUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textUsuario"/>
        <TextView
            android:id="@+id/textContraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editUsuario"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editContraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textContraseña"/>
        <Button
            android:id="@+id/buttonIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="40dp"
            android:text="Ingresar"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/editContraseña"/>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>